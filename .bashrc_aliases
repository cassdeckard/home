
###########
# aliases #
###########

# source .bashrc
alias .bash="source ~/.bashrc"

# general application aliases
alias screen='screen -R'

## ls options are hard
LL="ls -l"
if ls --color 2>/dev/null
then
   LL="$LL --color=auto"
   if ls --group-directories-first 2>/dev/null
   then
      LL="$LL --group-directories-first"
   fi
elif ls -G 2>/dev/null
then
   LL="$LL -G"
fi
alias ll="$LL"
