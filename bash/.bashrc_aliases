
###########
# aliases #
###########

# source .bashrc
alias .bash='source ~/.bashrc'

# general application aliases
alias screen='screen -R'
alias ll='ls -lG'
alias rider='open /Applications/Rider.app'
alias okta-terraform-test-env='source ~/bin/okta-terraform-test-env.sh'

# azure cmd shell
alias azure-sub-list='az account list -o table | grep AS'
azure-sub-switch ()
{
    sub_id=$(azure-sub-list | grep -i "\.$1" | awk '{ print $3 }');
    az account set --subscription "$sub_id";
    az account show -o table
}
