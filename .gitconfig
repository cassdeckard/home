# vim: noet:sw=8:ts=8:tw=79
[color]
	ui = auto
[color "branch"]
	current = yellow
	local = normal
	remote = blue
[color "diff"]
	meta = blue reverse
	frag = reverse
	old = red
	new = green
[color "status"]
	header = blue
	updated = green
	changed = yellow
	untracked = normal
	nobranch = red bold
[diff]
	renames = copy
	renameLimit = 20000
	mnemonicprefix = true
[pretty]
	info = format:%C(yellow)%h%C(reset) %C(blue)%ad%C(reset) %C(green)%an%C(reset)%C(red)%d%C(reset) %s
[user]
	name = Matt Deckard
	email = matthew.d.deckard@gmail.com
[alias]
	ap = add -p
	br = branch
	co = checkout
	cv = commit -v
	d = diff
	dc = diff --cached
	dccw = diff --cached --color-words
	dcw = diff --color-words
	dt = difftool -y
	dtc = difftool -y --cached
	graph = log --graph --oneline --decorate --date-order
	k = log --graph --oneline
	st = status
	pr = log --oneline --abbrev=10 --reverse
